<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox alignment="CENTER" spacing="30" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

        <HBox spacing="30" alignment="CENTER">
            <Button styleClass="tool-bar-button" fx:id="urgentes_button" text="Ver tareas Urgentes">

            </Button>
            <Button styleClass="tool-bar-button" fx:id="no_urgentes_button" text="Ver tareas no Urgentes">

            </Button>
            <Button styleClass="tool-bar-button" fx:id="lista_button" text="Ver tareas lista">
            </Button>
            <Button styleClass="tool-bar-button" fx:id="prioridad_button" text="Ver tareas prioridad">
            </Button>
        </HBox>
        </VBox>
    </top>

    <center>

        <VBox alignment="CENTER">

            <StackPane prefWidth="600"> <!-- or the width of your parent container -->

                <Label styleClass="title" fx:id="titulo_nombre_tarea_label" text="Ver tareas Urgentes" />
                <VBox alignment="BASELINE_RIGHT" prefWidth="600" style="-fx-padding: 0 10 30 0;">
                    <Label alignment="BASELINE_LEFT" styleClass="white-text-big" text="Filtro"></Label>
                    <ChoiceBox fx:id="filtro" value="Ninguno">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Ninguno" />
                                <String fx:value="Recursos Humanos" />
                                <String fx:value="Finanzas" />
                                <String fx:value="IT" />
                                <String fx:value="Ventas" />
                                <String fx:value="Marketing" />
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </VBox>

            </StackPane>
        <TableView  fx:id="table">
        </TableView>

        <HBox alignment="CENTER" spacing="10">

<!--            <Button fx:id="regresar" text="Regresar">-->
<!--            </Button>-->
            <Button fx:id="pausar_thread" text="Pausar tareas">
            </Button>
            <VBox alignment="CENTER" style="-fx-padding: 0 0 15 0;" >
                <Label styleClass="white-text-small" text="Velociad:">
                </Label>
                <Spinner fx:id="spinner_velocidad" initialValue="1" maxWidth="70">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory min="-10" max="10" initialValue="0" />
                    </valueFactory>
                </Spinner>
            </VBox>


        </HBox>

        </VBox>
    </center>



</BorderPane>
