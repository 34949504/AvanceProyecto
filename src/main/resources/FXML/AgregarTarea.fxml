<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.collections.FXCollections?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" alignment="TOP_CENTER" spacing="50">

    <HBox alignment="CENTER" spacing="50">

        <VBox alignment="CENTER">
        <Label text="Departamento" styleClass="white-text-big">

        </Label>
            <ChoiceBox styleClass="medium-size-choicebox" value="Seleccionar" fx:id="departamentos_choicebox">
                <items>
                    <!--            pila,cola,lista-->
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Recursos Humanos" />
                        <String fx:value="Finanzas" />
                        <String fx:value="IT" />
                        <String fx:value="Ventas" />
                        <String fx:value="Marketing" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </VBox>

        <VBox alignment="CENTER">

            <Label text="Tarea" styleClass="white-text-big">

            </Label>
            <ChoiceBox styleClass="medium-size-choicebox" value="Seleccionar" disable="true" fx:id="tarea_choicebox">
            </ChoiceBox>
        </VBox>

        <VBox alignment="CENTER">
            <Label text="Urgencia" styleClass="white-text-big">

            </Label>

            <ChoiceBox styleClass="medium-size-choicebox" value="Seleccionar" fx:id="urgencia_choicebox">
                <items>
                    <!--            pila,cola,lista-->
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Urgente" />
                        <String fx:value="No urgente" />
                        <String fx:value="listas" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </VBox>
    </HBox>

    <VBox alignment="CENTER" styleClass="container-white-background" prefHeight="150" prefWidth="400" maxWidth="400"
    >
        <VBox alignment="BASELINE_LEFT" spacing="5">
        <Label  styleClass="medium-size-text-black-bold " fx:id="departamento_label" text="Departamento:"></Label>
        <Label styleClass="medium-size-text-black-bold " fx:id="tarea_label" text="Tarea:"></Label>
        <Label styleClass="medium-size-text-black-bold" fx:id="milisegundos_label"  text="Segundos:"></Label>
        <Label styleClass="medium-size-text-black-bold" fx:id="tipoTarea_label"  text="Tipo de tarea:"></Label>

        </VBox>
    </VBox>


    <HBox alignment="CENTER" spacing="40">
<!--    <Button styleClass="normal-button" fx:id="regresar" text="Regresar">-->
<!--    </Button>-->
    <Button styleClass="normal-button" fx:id="enviar" text="Enviar">
    </Button>

    </HBox>
</VBox>
